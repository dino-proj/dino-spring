# use POSIX interface, symlink is followed automatically
BIN_PATH="${BASH_SOURCE-$0}"
BIN_DIR="$(dirname "${BIN_PATH}")"
APP_DIR="$(cd "${BIN_DIR}/.."; pwd)"

sh $APP_DIR/bin/app.sh stop @app.name@