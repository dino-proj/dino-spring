<configuration debug="false" scan="false">

  <include resource="org/springframework/boot/logging/logback/defaults.xml" />
  <property name="LOG_FILE" value="${logging.file}" />


  <!-- "CONSOLE" log output -->
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
      <charset>${CONSOLE_LOG_CHARSET}</charset>
    </encoder>
  </appender>

  <!-- "FILE" log for all output -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_FILE}.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
      <charset>${FILE_LOG_CHARSET}</charset>
    </encoder>
  </appender>

  <!-- "ERROR" log for error output -->
  <appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_FILE}.error.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_FILE}.error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxFileSize>50MB</maxFileSize>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
      <charset>${FILE_LOG_CHARSET}</charset>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>ERROR</level>
    </filter>
  </appender>

  <!-- for prod -->
  <springProfile name="prod">
    <root level="INFO">
      <appender-ref ref="FILE" />
      <appender-ref ref="ERROR" />
    </root>
  </springProfile>

  <!-- for prod -->
  <springProfile name="!prod">
    <root level="DEBUG">
      <appender-ref ref="FILE" />
      <appender-ref ref="ERROR" />
    </root>
  </springProfile>

  <!-- 定义一个用于GC日志的Appender -->
  <appender name="GC_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!-- 设置日志文件的路径和文件名 -->
    <file>${LOG_FILE}.gc.log</file>
    <!-- 设置滚动策略 -->
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- 设置日志文件的命名规则 -->
      <fileNamePattern>${LOG_FILE}.gc.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <!-- 设置日志文件的最大历史天数 -->
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <!-- 设置日志的编码和格式 -->
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
      <charset>${FILE_LOG_CHARSET}</charset>
    </encoder>
  </appender>

  <logger name="gc" level="INFO" additivity="false">
    <appender-ref ref="GC_LOG" />
  </logger>

</configuration>